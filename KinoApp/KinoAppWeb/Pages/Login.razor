@page "/login"

<PageTitle>Login</PageTitle>

<div class="login-page">
    <div class="login-card card shadow-sm">
        <div class="card-body">
            <h2 class="text-center mb-4">Login</h2>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" class="form-control" @bind="_email" @bind:event="oninput" />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Passwort</label>
                <input id="password" type="password" class="form-control" @bind="_password" @bind:event="oninput" />
            </div>

            <button type="button" class="btn btn-primary w-100" @onclick="OnSubmit" disabled="@_isBusy">
                @(_isBusy ? "Logging in…" : "Login")
            </button>

            <p class="mt-3 text-center">
                Noch kein Konto?
                <a href="/register">Jetzt registrieren</a>
            </p>
        </div>
    </div>
</div>
