@startuml
'https://plantuml.com/class-diagram

Film "1" <-- "0..m" Vorstellung
Kinosaal "1" <-- "0..m" Vorstellung
Vorstellung "1" <-- "0..m" Ticket
Sitzreihe "1" *-- "1..m" Sitzplatz
Kinosaal *-- "1..m" Sitzreihe
Warenkorb "0..1" <-- "0..m" Ticket
Sitzplatz "1" <-- Ticket


Gast *-- "1" Warenkorb
Kunde *-- "1" Warenkorb

Gast --|> Benutzer
Kunde --|> Benutzer
Mitarbeiter --|> Benutzer

class Film {
titel: String
beschreibung: String
dauer: Int
fsk: Int
genre: String
'play()
}

class Kinosaal {
name: String
}

class Vorstellung {
datum: Date
zeit: Time
status: Vorstellungsstatus
}

class Sitzreihe{
kategorie: Platzkategorie
nummer: Int
}

class Sitzplatz{
gebucht: Boolean
nummer: Int
preis: Int
}

class Ticket{
id: Int
status: Ticketstatus
}


enum Platzkategorie{
LOGEPLUS
LOGE
PARKETT
}

abstract class Benutzer {
  name: String
  email: String
}

class Gast
class Kunde
class Mitarbeiter
class Warenkorb {
  gesamtpreis: Int
}


enum Ticketstatus {
RESERVIERT
BEZAHLT
STORNIERT
}

enum Vorstellungsstatus {
GEPLANT
LÃ„UFT
BEENDET
}


@enduml